{% comment %}
  GBI Debug Mode Enabler
  
  Include this snippet to enable detailed logging for GBI components.
  Only enable in development/staging environments.
  
  Usage:
  {% render 'gbi-debug' %}
{% endcomment %}

{% if request.host contains 'staging' or request.host contains 'dev' or shop.name contains 'test' %}
  <script>
    // Enable debug logging for GBI components
    window.GBI_DEBUG = true;
    console.log('[GBI Debug] Debug mode enabled for:', '{{ shop.name }}');
  </script>
{% else %}
  {% comment %} Debug mode disabled in production {% endcomment %}
{% endif %} 