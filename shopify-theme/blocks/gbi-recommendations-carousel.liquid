{% comment %}
  GBI Recommendations Carousel App Block
{% endcomment %}

{%- liquid
  assign model_name = block.settings.model_name | default: 'similar-items'
  assign collection_name = block.settings.collection | default: 'products'
  assign page_size = block.settings.page_size | default: 12
  assign items_per_page_desktop = block.settings.items_per_page_desktop | default: 4
  assign items_per_page_mobile = block.settings.items_per_page_mobile | default: 2
  assign header_text = block.settings.header_text | default: 'Related Products'
-%}

{% render 'gbi-recommendations-carousel',
   model_name: model_name,
   collection: collection_name,
   page_size: page_size,
   items_per_page_desktop: items_per_page_desktop,
   items_per_page_mobile: items_per_page_mobile,
   header_text: header_text,
   product_id: product.id %}

{% schema %}
{
  "name": "GBI Recommendations Carousel",
  "target": "section",
  "available_if": "{{ app.metafields.gbi_search.enabled }}",
  "settings": [
    {
      "type": "text",
      "id": "header_text",
      "label": "Header Text",
      "default": "Related Products"
    },
    {
      "type": "select",
      "id": "model_name",
      "label": "Recommendation Model",
      "options": [
        {
          "value": "similar-items",
          "label": "Similar Items"
        },
        {
          "value": "frequently-bought-together",
          "label": "Frequently Bought Together"
        },
        {
          "value": "others-you-may-like",
          "label": "Others You May Like"
        }
      ],
      "default": "similar-items"
    },
    {
      "type": "text",
      "id": "collection",
      "label": "Collection",
      "default": "products"
    },
    {
      "type": "range",
      "id": "page_size",
      "label": "Total Products to Load",
      "min": 4,
      "max": 24,
      "step": 2,
      "default": 12
    },
    {
      "type": "range",
      "id": "items_per_page_desktop",
      "label": "Products per Page (Desktop)",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "items_per_page_mobile",
      "label": "Products per Page (Mobile)",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 2
    }
  ]
}
{% endschema %}
