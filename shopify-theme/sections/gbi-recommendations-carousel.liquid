{% comment %}
  GBI Recommendations Carousel Section
{% endcomment %}

{%- liquid
  assign model_name = section.settings.model_name | default: 'similar-items'
  assign collection_name = section.settings.collection | default: 'products'
  assign page_size = section.settings.page_size | default: 12
  assign items_per_page_desktop = section.settings.items_per_page_desktop | default: 4
  assign items_per_page_mobile = section.settings.items_per_page_mobile | default: 2
  assign header_text = section.settings.header_text | default: 'Related Products'
  assign section_padding_top = section.settings.padding_top
  assign section_padding_bottom = section.settings.padding_bottom
-%}

<div class="gbi-recommendations-section"
     style="padding-top: {{ section_padding_top }}px; padding-bottom: {{ section_padding_bottom }}px;">
  <div class="page-width">
    {% render 'gbi-recommendations-carousel',
       model_name: model_name,
       collection: collection_name,
       page_size: page_size,
       items_per_page_desktop: items_per_page_desktop,
       items_per_page_mobile: items_per_page_mobile,
       header_text: header_text,
       product_id: product.id %}
  </div>
</div>

{% schema %}
{
  "name": "GBI Recommendations Carousel",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "header_text",
      "label": "Header Text",
      "default": "Related Products"
    },
    {
      "type": "header",
      "content": "Recommendation Settings"
    },
    {
      "type": "select",
      "id": "model_name",
      "label": "Recommendation Model",
      "options": [
        {
          "value": "similar-items",
          "label": "Similar Items"
        },
        {
          "value": "frequently-bought-together",
          "label": "Frequently Bought Together"
        },
        {
          "value": "others-you-may-like",
          "label": "Others You May Like"
        }
      ],
      "default": "similar-items"
    },
    {
      "type": "text",
      "id": "collection",
      "label": "Collection",
      "default": "products"
    },
    {
      "type": "range",
      "id": "page_size",
      "label": "Total Products to Load",
      "min": 4,
      "max": 24,
      "step": 2,
      "default": 12
    },
    {
      "type": "header",
      "content": "Carousel Display"
    },
    {
      "type": "range",
      "id": "items_per_page_desktop",
      "label": "Products per Page (Desktop)",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "items_per_page_mobile",
      "label": "Products per Page (Mobile)",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 2
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "GBI Recommendations Carousel"
    }
  ]
}
{% endschema %}
